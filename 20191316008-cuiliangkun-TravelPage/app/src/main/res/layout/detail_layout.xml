<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/bali"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="景点详情"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro"
        android:textColor="#8F8F94"
        android:textSize="15dp"
        android:text="帝国大厦（Empire State Building），是竣工于1931年4月11日的高层建筑物，是美国纽约的地标建筑物之一。位于曼哈顿第五大道350号、西33街与西34街之间。它是保持世界最高建筑地位最久的摩天大楼（1931-1972共41年）。"
        android:layout_marginLeft="20dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属目的地"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pos"
        android:textColor="#8F8F94"
        android:text="东京"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        ></TextView>
    <View
        android:layout_marginTop="50dp"
        android:layout_width="400dp"
        android:layout_height="1dp"

        android:background="#8F8F94"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开放时间"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textColor="#8F8F94"
        android:text="东京"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="景区联系方式"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:textColor="#8F8F94"
        android:text="东京"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        ></TextView>
</LinearLayout>
